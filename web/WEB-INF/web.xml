<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <session-config>
        <session-timeout>20</session-timeout>
    </session-config>
    <listener>
        <listener-class>util.SessionListener</listener-class>
    </listener>

    <context-param>
        <param-name>poolConfig</param-name>
        <param-value>
            jdbcdriver=com.mysql.jdbc.Driver
            jdbcUrl=jdbc:mysql://localhost:3306/hago?characterEncoding=UTF-8
            dbUser=root
            dbPass=jjuny1977
            validationQuery=select 1
            minIdle=3
            maxTotal=60
            poolName=HagoProject
        </param-value>
    </context-param>

    <!--Error Page-->
    <error-page>
        <error-code>400</error-code>
        <location>
            /WEB-INF/view/error/error_400.jsp
        </location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>
            /WEB-INF/view/error/error_403.jsp
        </location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>
            /WEB-INF/view/error/error_404.jsp
        </location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>
            /WEB-INF/view/error/error_500.jsp
        </location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>
            /WEB-INF/view/error/error_404.jsp
        </location>
    </error-page>

    <!-- Encoding Filter -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!--Error Check Filter-->
    <filter>
        <filter-name>errorCheckFilter</filter-name>
        <filter-class>filter.ErrorCheckFilter</filter-class>
        <init-param>
            <param-name>configFile</param-name>
            <param-value>
                /WEB-INF/commandHandlerURI.properties
            </param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>errorCheckFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

    <!--Session Check Filter-->
    <filter>
        <filter-name>SessionCheckFilter</filter-name>
        <filter-class>filter.SessionCheckFilter</filter-class>
        <init-param>
            <param-name>excludedUrls</param-name>
            <!--세션검사에서 제외할 url들  -->
            <param-value>
              /service.do,/private.do,/like.ajax,/search.do,/content.ajax,/notice.ajax,/qna.ajax,/auth.ajax,/detailCreate.do,/profile.do,/debug.do,/login.do,/main.do,/detail.do,/admin.do,/register.do,/idsearch.do,/passwordsearch.do,/profileedit.do,/profileconfirm.do,/intro.do,/notice.do,/qna.do
            </param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SessionCheckFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <url-pattern>*.ajax</url-pattern>
    </filter-mapping>

    <!--Token Check Filter-->
    <filter>
        <filter-name>Security</filter-name>
        <filter-class>filter.JwtAuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Security</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>jdbc.DBCPInitListener</listener-class>
    </listener>

    <!-- ControllerUsingURI 관련 설정 -->
    <servlet>
        <servlet-name>ControllerUsingURI</servlet-name>
        <servlet-class>mvc.controller.ControllerUsingURI</servlet-class>
        <init-param>
            <param-name>configFile</param-name>
            <param-value>
                /WEB-INF/commandHandlerURI.properties
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>ControllerUsingURI</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <!-- ControllerUsingAjax 관련 설정 -->
    <servlet>
        <servlet-name>ControllerUsingAjax</servlet-name>
        <servlet-class>mvc.controller.ControllerUsingAjax</servlet-class>
        <init-param>
            <param-name>configFile</param-name>
            <param-value>
                /WEB-INF/commandHandlerURI.properties
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>ControllerUsingAjax</servlet-name>
        <url-pattern>*.ajax</url-pattern>
    </servlet-mapping>

    <!-- 시작 페이지 설정 -->
    <welcome-file-list>
        <welcome-file>/WEB-INF/view/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
